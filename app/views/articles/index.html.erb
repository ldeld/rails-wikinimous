<h1>Articles</h1>
<%= link_to "Write new article", new_article_path %>
<br>
<br>
<% @articles.each do |article| %>
  <li>
    <%= link_to article.title, article_path(article) %>
    <%= link_to "Edit this article", edit_article_path(article) %>
    <%= link_to "Delete", article_path(article),
    method: :delete %>
  </li>

<% end %>
